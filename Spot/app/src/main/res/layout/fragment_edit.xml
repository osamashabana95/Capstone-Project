        android:nextFocusUp="@id/switch_jokes"
        android:text="@string/state_off"
        android:tag="@string/tag_funny"
        android:contentDescription="@string/switch_content_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_jokes" />

    <Switch
        android:id="@+id/switch_soccer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
