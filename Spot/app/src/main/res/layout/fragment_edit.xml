<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"

    >

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    tools:context=".fragments.EditFragment">


    <Switch
        android:id="@+id/switch_politics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:tag="@string/tag_politics"
        android:contentDescription="@string/switch_content_description"
        android:text="@string/state_off"
        android:nextFocusDown="@id/switch_worldnews"
        android:nextFocusUp="@id/switch_food"
        app:layout_constraintBottom_toTopOf="@+id/switch_worldnews"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/text_politics"
        app:layout_constraintBaseline_toBaselineOf="@+id/switch_politics"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/text_worldnews"
        app:layout_constraintBaseline_toBaselineOf="@+id/switch_worldnews"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
